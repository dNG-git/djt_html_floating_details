{
    "name": "@dng-git/djt-html-floating-details",
    "license": "MPL-2.0",
    "description": "'djt-html-floating-details' implements an enhanced, optional floating variant of 'djt-html-details'.",
    "homepage": "https://www.direct-netware.de/redirect?djt;html;floating_details",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/dNG-git/djt_html_floating_details.git"
    },
    "config": {
        "rollup": {
            "external_packages": [ ],
            "external_unscoped_packages": [ "@dng-git/djt-html-component", "@dng-git/djt-html-popper" ]
        }
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "main": "./lib/cjs/floating-details.js",
    "module": "./lib/floating-details.js",
    "browser": "./lib/cjs/floating-details.js",
    "types": "./lib/floating-details.d.ts",
    "scripts": {
        "install-clean": "npm install --no-save",
        "update-clean": "npm update --no-save",
        "build": "npm run build-lib && npm run build-dist",
        "build-dist": "npm run build-dist:css && npm run build-dist:es5 && npm run build-dist:module",
        "build-dist:css": "./node_modules/.bin/postcss src/floating-details.scss -o dist/djt-html-floating-details.css -m",
        "build-dist:es5": "./node_modules/.bin/rollup -c rollup.config-es5.js",
        "build-dist:module": "./node_modules/.bin/rollup -c",
        "build-lib": "npm run build-lib:es6 && npm run build-lib:cjs",
        "build-lib:es6": "./node_modules/.bin/tsc",
        "build-lib:cjs": "./node_modules/.bin/tsc -p tsconfig.cjs.json",
        "prepare": "npm run build-lib",
        "test": ""
    },
    "dependencies": {
        "@dng-git/djt-html-component": "git://github.com/dNG-git/djt_html_component.git#semver:^2.2.0",
        "@dng-git/djt-html-details": "git://github.com/dNG-git/djt_html_details.git#semver:^1.0.0",
        "@dng-git/djt-html-popper": "git://github.com/dNG-git/djt_html_popper.git#semver:^1.0.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.0.1",
        "cssnano": "^4.1.10",
        "eslint": "^7.10.0",
        "eslint-plugin-react": "^7.21.2",
        "eslint-plugin-header": "^3.1.0",
        "postcss": "^8.1.0",
        "postcss-cli": "^8.0.0",
        "postcss-node-sass": "^2.1.8",
        "postcss-scss": "^3.0.2",
        "rollup": "^2.28.2",
        "rollup-plugin-terser": "^7.0.2",
        "typescript": "^4.0.3",
        "@rollup/plugin-commonjs": "^15.1.0",
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@rollup/plugin-replace": "^2.3.3",
        "@rollup/plugin-typescript": "^6.0.0",
        "@typescript-eslint/parser": "^4.2.0",
        "@typescript-eslint/eslint-plugin": "^4.2.0"
    }
}
